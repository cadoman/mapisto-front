{
    "extends": "tslint:recommended",
    "rules": {
        "max-line-length": {
            "options": [
                120
            ]
        },
        "new-parens": true,
        "no-arg": true,
        "semicolon": [
            true,
            "always"
        ],
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        },
        "no-implicit-dependencies": [true, ["src"]],
        "no-submodule-imports" : false
    },
    "jsRules": {
        "max-line-length": {
            "options": [
                120
            ]
        }
    }
}